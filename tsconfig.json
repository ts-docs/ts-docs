{
  "compilerOptions": {
    "target": "es6",                               
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "removeComments": true,
    "downlevelIteration": true,              
    "strict": true,                             
    "noImplicitAny": true,                       
    "strictFunctionTypes": true,                 
    "alwaysStrict": true,                        

    "noImplicitReturns": true,            
    "noFallthroughCasesInSwitch": true,      

    "esModuleInterop": true,                    

    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "tsdocsOptions": {
    "entryPoints": ["./src/index.ts", "./ts-extractor/src/index.ts"],
    "name": "ts-docs"
  }
}
